{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",  
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**/*.html", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",      
      "dest": "/frontend/assets/$1"
    },
    {
      "src": "/(.*)",           
      "dest": "backend/server.js"
    }
  ]
}